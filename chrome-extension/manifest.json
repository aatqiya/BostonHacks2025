{
  "manifest_version": 3,
  "name": "FreezeByte - Cyber Security Companion",
  "version": "1.0.0",
  "description": "Your Cyber Companion for Enhanced Online Security and Privacy. ❄️ Freeze Threats. Byte Back.",

  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "alarms",
    "activeTab",
    "webRequest"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["blocker.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FreezeByte Security",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "blocker.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}